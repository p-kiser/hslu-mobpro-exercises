<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:fontFamily="serif-monospace"
                android:text="@string/title"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="64dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="@string/section_1"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="89dp" />

            <TextView
                android:id="@+id/counterTextView"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="FÜDLÄ!" />

            <TextView
                android:id="@+id/prefTextView"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="@string/tee_pref_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:onClick="editTeaPreferences"
                    android:text="EDIT PREFS" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="resetTeaPreferences"
                    android:text="SET DEFAULT" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="@string/section_2"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="89dp" />

            <CheckBox
                android:id="@+id/checkExternal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_external" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mounted"
                android:textColor="@color/gray"/>

            <EditText
                android:id="@+id/someText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Irgendein Text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="saveFile"
                    android:text="Speichern" />

                <Button
                    android:id="@+id/buttLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laden"
                    android:onClick="loadFile"/>
            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Room DB"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="89dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:onClick="editNote"
                    android:text="Notiz erzeugen" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="gibNotes"
                    android:text="Notizen anzeigen" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Content Provider"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="89dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:onClick="showSms"
                android:text="SMS anzeigen" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>